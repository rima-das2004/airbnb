<% layout('layouts/boilerplate') -%>
<body>
    <div class="container">
        <div class="row mb-5">
            <form action="/listing" method="post" class="needs-validation" novalidate>
                <h1>Create Listing</h1>
                <br><br>
                <div class="input-group mb-3">
                    <span class="input-group-text">Title</span>
                    <input type="text" name="listing[title]" class="form-control" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                
                  </div>
                  <div class="input-group mb-3">
                    <span class="input-group-text">Description</span>
                    <textarea class="form-control" rows="5" name="listing[description]" aria-label="With textarea" required></textarea>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                
                  </div>

                  <div class="input-group mb-3">
                    <span class="input-group-text">Image filename</span>
                    <input type="text" name="listing[image][filename]" class="form-control" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>  

                  <div class="input-group mb-3">
                    <span class="input-group-text">Image Url</span>
                    <input type="text" name="listing[image][url]" class="form-control">

                  </div> 
                
                  <div class="input-group mb-3">
                    <span class="input-group-text">Price</span>
                    <input type="text" name="listing[price]" class="form-control" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                    <div class="invalid-feedback">
                      Price should be valid.
                    </div>
                  </div> 

                  <div class="input-group mb-3">
                    <span class="input-group-text">Location</span>
                    <input type="text" name="listing[location]" class="form-control" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                    <div class="invalid-feedback">
                      Location should be valid
                    </div>
                  </div> 
                  <div class="input-group mb-3">
                    <span class="input-group-text">Country</span>
                    <input type="text" name="listing[country]" class="form-control" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                    <div class="invalid-feedback">
                      Country name should be valid
                    </div>
                  </div> 
                
                <br>
                    <button class="btn btn-primary px-5" style="background-color: #BF3880; color:white; border:none;" type="submit">SUBMIT</button>
                </form>
                <br><br>
        </div>
    </div>
</body>
</html>